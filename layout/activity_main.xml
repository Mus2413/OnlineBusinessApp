<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/welcomepic1"
    android:scaleType="fitCenter">

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/appSlogan"
        android:layout_marginLeft="150dp"
        android:text="Perfect place to discover and Buy your essentials..."
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/appSlogan2"
        android:text="Jaijinendra"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/appSlogan"
        android:layout_marginLeft="250dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_login_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Already have an account? Login"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_join_now_btn"
        android:layout_above="@id/main_login_btn"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Join now"
        android:textColor="@color/colorWhite" />



</RelativeLayout>