<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/loginimage3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="250dp"
        android:id="@+id/logintxt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginphoneinput"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@color/colorblack"
        android:layout_below="@id/logintxt"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginpassinput"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/colorblack"
        android:layout_below="@id/loginphoneinput"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="horizontal"
        android:layout_below="@id/loginpassinput"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remember_me_checkbox"
            android:text="Remember me"
            style="@style/Material.Drawable.CheckBox"
            android:textColor="@color/colorblack"
            app:cbd_strokeColor="@color/colorblack"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgetpass"
            android:text="Forget Password?"
            android:textColor="@color/colorblack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:layout_below="@+id/linear_layout"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_panel_link"
        android:text="I'm an Admin?"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_admin_panel_link"
        android:text="I'm not an  Admin?"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorblack"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginLeft="25dp"/>


</RelativeLayout>