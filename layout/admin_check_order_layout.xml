<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        android:elevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Username"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/custusername"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Phone Number"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/custusername"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/custphonenumber"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Total Price"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/custtotalprice"
            android:layout_below="@id/custphonenumber"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Order Address"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/custaddress"
            android:layout_below="@id/custtotalprice"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Date and Time"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/custorderdate"
            android:layout_below="@id/custaddress"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custorderdate"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="View Order details"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp"
            android:id="@+id/view_order_details"/>


    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>