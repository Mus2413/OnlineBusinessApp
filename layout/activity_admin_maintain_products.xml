<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Admin.AdminMaintainProductsActivity"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_marginTop="100dp"
    android:layout_marginStart="55dp"
    android:layout_marginEnd="15dp"
    android:layout_centerHorizontal="true"
    android:elevation="15dp">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="450dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:background="@drawable/input_design"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/change_product_name"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/change_product_name"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:id="@+id/change_product_image"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/input_design"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="7dp"
            android:id="@+id/change_product_description"
            android:layout_below="@id/change_product_image"
            android:textColor="@color/colorblack"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/change_product_price"
            android:padding="7dp"
            android:background="@drawable/input_design"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/change_product_description"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorblack"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply changes"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/apply_changes_btn"
            android:padding="7dp"
            android:background="@drawable/buttons"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/change_product_price"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete this Product"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/delete_product_btn"
            android:padding="7dp"
            android:background="@drawable/buttons"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/apply_changes_btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

