<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Add New Product"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@id/slogan_category">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview1"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:id="@+id/daalimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/daal"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            android:focusableInTouchMode="true"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pulses"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/daalimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview2"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginLeft="15dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rices"
            android:id="@+id/riceimage"
            android:scaleType="centerCrop"
            android:elevation="3dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rice"
            android:textColor="@color/colorblack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/riceimage"
            android:textAlignment="center"
            android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/cardview3"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/masala"
            android:scaleType="centerCrop"
            android:id="@+id/masalaimage" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Spices"
            android:textColor="@color/colorblack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/masalaimage"
            android:textAlignment="center"
            android:layout_marginTop="5dp"></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@id/linear1_category_layout">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview4"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cookingoil"
            android:scaleType="centerCrop"
        android:id="@+id/cookingoilimage"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cooking Oil"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/cookingoilimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview5"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/aata"
            android:scaleType="centerCrop"
            android:id="@+id/aataimages" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wheat"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/aataimages"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview6"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:id="@+id/bodyessentialsimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bodyessentials"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Body Soap"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/bodyessentialsimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>

        </RelativeLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@id/linear2_category_layout">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview7"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/colgate"
            android:scaleType="centerCrop"
            android:id="@+id/toothpasteimage" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tooth Paste and Brushes"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/toothpasteimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview8"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hairoil"
            android:id="@+id/hairoilimage" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HairOil"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/hairoilimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview9"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/wasingshop"
            android:id="@+id/washingshopimages"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Washing Soap and Powder"
                android:textColor="@color/colorblack"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_below="@id/washingshopimages"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear4_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@id/linear3_category_layout">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview10"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fairlovely"
            android:scaleType="centerCrop"
            android:id="@+id/fairlovelyimages" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Beauty"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/fairlovelyimages"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview11"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:id="@+id/daliyaimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/daliya" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Breakfast and Cereals"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/daliyaimage"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cardview12"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="150dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/chotawalasoya"
            android:scaleType="centerCrop"
            android:id="@+id/soyaimages"
            android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Peas and Soya"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@id/soyaimages"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

            </TextView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear4_category_layout"
        android:id="@+id/linear7_btnlayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Maintain Product Details"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttons"
                android:id="@+id/admin_maintain_btn"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear7_btnlayout"
        android:id="@+id/linear5_btnlayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Check new Order"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttons"
                android:id="@+id/check_new_order"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear5_btnlayout"
        android:id="@+id/linear6_btnlayout"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Logout"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttons"
                android:id="@+id/admin_logout_btn"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
</LinearLayout>
